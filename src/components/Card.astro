---
const {
  data: { title, subtitle, description, image },
} = Astro.props;
---

<li
  class="rounded-2xl overflow-hidden transition-shadow hover:shadow-xl hover:shadow-sky-500"
>
  <img
    src={image}
    alt="React System"
    width="640"
    height="360"
    class="w-full h-48 object-cover"
  />
  <div class="h-full p-3 bg-zinc-900 flex flex-col gap-0.5">
    <h2 class="text-lg font-extrabold">{title}</h2>
    <h3 class="text-zinc-400 font-bold">{subtitle}</h3>
    <p class="text-sm">{description}</p>
  </div>
</li>
