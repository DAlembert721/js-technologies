---
import "../styles/css/index.css";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta
      name="description"
      content="Best JavaScript frameworks and libraries for Frontend web development that enable optimal use of HTML, CSS and JavaScript."
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="flex flex-col min-h-screen">
    <header class="fixed top-0 w-full bg-sky-500">
      <nav class="py-4">
        <div class="container px-4 mx-auto flex items-center justify-between">
          <a href="/" class="flex items-center gap-2">
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6a/JavaScript-logo.png/768px-JavaScript-logo.png"
              alt="JavaScipt"
              width="32"
              height="32"
              class="w-8 h-8 block object-cover"
            />
            <h1
              class="text-zinc-100 text-xl font-black text-center transition-all hover:brightness-125"
            >
              JavaScript
            </h1>
          </a>
          <ul>
            <li>
              <a
                href="/about"
                class="text-zinc-100 font-semibold transition-all hover:brightness-125"
                >About</a
              >
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-auto bg-sky-500">
      <nav class="py-4">
        <div class="container px-4 mx-auto">
          <a href="https://www.linkedin.com/in/elliotgaramendi/">
            <h2
              class="text-zinc-100 font-extrabold text-center transition-all hover:brightness-125"
            >
              Made with â™¥ by Elliot Garamendi.
            </h2>
          </a>
        </div>
      </nav>
    </footer>
  </body>
</html>
